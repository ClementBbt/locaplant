<div class="container">
  <h3 class="mt-2 mb-2 text-center">Retrouvez facilement les plantes proches de chez vous</h3>
  <div class="container-card-plant">
    <% @plants.each do |plant| %>
      <div class="card-plant">
        <a href= <%= "plants/#{plant.id}" %> >
          <% if plant.photo.attached? %>
            <%= cl_image_tag plant.photo.key %>
          <% else %>
            <img class="card-plant-banner" src="https://images.unsplash.com/photo-1470058869958-2a77ade41c02?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80" />
          <% end %>
          <div class="card-plant-infos">
            <div>
              <h2><%= plant.name %></h2>
              <p><%= plant.description %></p>
            </div>
            <div class="d-flex justify-content-end">
              <h3 class="card-trip-pricing"><%= plant.price_per_day%><%= "â‚¬/jour"%></h3>
              <img src="https://kitt.lewagon.com/placeholder/users/ClementBbt" class="card-trip-user avatar-bordered" />
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
