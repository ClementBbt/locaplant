
<div class="bg-white">
  <div class="container p-3">
    <div class="row">
      <div class="col-md-8">
        <h3> <%= @plant.name %> </h3>
        <p class="address">Adresse du propriétaire</p>
        <p class="lighter"> <%= @plant.description %> </p>
      </div>
      <div class="col-md-4">
        <% if @plant.photo.attached? %>
          <%= cl_image_tag @plant.photo.key %>
        <% else %>
        <img class="w-100 rounded" src="https://images.unsplash.com/photo-1470058869958-2a77ade41c02?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80" />
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container py-3">
  <div class="row">
    <div class="col-md-8">

    </div>
    <div class="col-md-4">
      <div class="bg-white border p-3 sticky-top">
        <div class="d-flex justify-content-between mt-3">
          <p>Prix par jour</p>
          <p><%= @plant.price_per_day %>€</p>
        </div>
        <div class="d-flex justify-content-between mt-3 border-bottom">
          <form>
            <div class="form-group row">
              <label class="col-sm-4 col-form-label" for="start-date">Début</label>
              <div class="col-sm-8">
                <input type="Date" class="form-control" id="start-date" aria-describedby="start-date" placeholder="Date de début">
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4 col-form-label" for="end-date">Fin</label>
              <div class="col-sm-8">
                <input type="Date" class="form-control" id="end-date" placeholder="Date de fin">
              </div>
            </div>
          </form>
        </div>
        <div class="d-flex justify-content-between mt-3">
          <p>Total</p>
          <p> €</p>
        </div>
        <a href="#" class="myButton checkout w-100">Je réserve !</a>
      </div>
    </div>
  </div>
</div>
